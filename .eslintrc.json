{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "indent": ["error", 2],
        "linebreak-style": 0,
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-extra-semi": "error",
        "no-tabs": ["error", { "allowIndentationTabs": true }]
    }
}
